<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.*?>
<?import javafx.geometry.*?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.FrontEquipe">

    <children>
        <!-- Background gradient -->
        <Rectangle width="1280.0" height="720.0" styleClass="background-gradient"/>

        <!-- Header with title -->
        <HBox alignment="CENTER" layoutX="0.0" layoutY="20.0" prefWidth="1280.0">
            <StackPane styleClass="header-container">
                <Rectangle width="500.0" height="60.0" styleClass="header-rectangle"/>
                <Label text="LISTE DES EQUIPES" styleClass="header-text"/>
                <Polygon points="0,0, 30,0, 40,15, 500,15, 510,0, 540,0, 520,60, 20,60" fill="transparent" stroke="#b14fff" strokeWidth="2.0"/>
            </StackPane>
        </HBox>

        <!-- Home button with cyberpunk design -->
        <StackPane layoutX="40.0" layoutY="40.0" styleClass="home-button-container">
            <Rectangle width="120.0" height="40.0" styleClass="home-button-background"/>
            <Polygon points="0,0, 100,0, 120,20, 120,40, 20,40, 0,20" fill="transparent" stroke="#b14fff" strokeWidth="2.0"/>
            <HBox alignment="CENTER" spacing="10">
                <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
                    <Image url="button home.png"/>
                </ImageView>
                <Label text="HOME" styleClass="home-button-text"/>
            </HBox>
            <Button fx:id="homeButton" mnemonicParsing="false"  opacity="0.0" prefHeight="40.0" prefWidth="120.0"/>
        </StackPane>

        <!-- Main content area - focus on card display -->
        <HBox spacing="20" layoutX="40.0" layoutY="100.0" prefHeight="540.0" prefWidth="1200.0">
            <!-- Main panel for team cards -->
            <StackPane styleClass="main-panel" HBox.hgrow="ALWAYS">
                <Rectangle width="1200.0" height="540.0" styleClass="panel-background"/>
                <Polygon points="0,0, 1150,0, 1200,50, 1200,490, 1150,540, 0,540, 50,490, 50,50" fill="transparent" stroke="#b14fff" strokeWidth="2.0"/>

                <!-- ScrollPane for teams -->
                <ScrollPane prefHeight="520.0" prefWidth="1180.0" styleClass="transparent-scroll-pane" hbarPolicy="NEVER">
                    <VBox fx:id="equipeContainer" spacing="20" styleClass="team-container">
                        <!-- Team cards will be added here dynamically -->
                    </VBox>
                    <padding>
                        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
                    </padding>
                </ScrollPane>
            </StackPane>
        </HBox>

        <!-- Bottom bar with username, donate button, etc. -->
        <HBox alignment="CENTER_LEFT" layoutX="40.0" layoutY="660.0" spacing="20.0" prefWidth="1200.0">


            <StackPane layoutX="220.0">
                <Rectangle width="120.0" height="40.0" styleClass="button-background"/>
                <Polygon points="0,0, 70,0, 120,40, 0,40" fill="transparent" stroke="#b14fff" strokeWidth="2.0"/>

            </StackPane>


        </HBox>

        <!-- Donation alert bar -->


        <!-- Live chat indicator -->

    </children>
</AnchorPane>