<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="499.0" prefWidth="621.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.ModifierGiveawayController">
    <stylesheets>
        <URL value="@style.css" /> <!-- Lien vers le fichier CSS -->
    </stylesheets>

    <!-- Titre de la fenêtre -->
    <Text layoutX="282.0" layoutY="61.0" styleClass="title" text="Modifier Giveaway" />

    <!-- Label et champ pour le titre du giveaway -->
    <Label layoutX="239.0" layoutY="91.0" styleClass="form-label" text="Titre du Giveaway:" />
    <TextField fx:id="titreGiveawayField" layoutX="235.0" layoutY="124.0" prefHeight="28.0" prefWidth="194.0" promptText="Titre du Giveaway" />

    <!-- Label et champ pour la description -->
    <Label layoutX="235.0" layoutY="162.0" styleClass="form-label" text="Description:" />
    <TextArea fx:id="descriptionGiveawayArea" layoutX="235.0" layoutY="188.0" prefHeight="28.0" prefWidth="194.0" promptText="Description" />

    <!-- Label et DatePicker pour la date de début -->
    <Label layoutX="234.0" layoutY="287.0" styleClass="form-label" text="Date Début:" />
    <DatePicker fx:id="dateDebutPicker" layoutX="234.0" layoutY="307.0" prefHeight="41.0" prefWidth="194.0" promptText="Date Début" />

    <!-- Label et DatePicker pour la date de fin -->
    <Label layoutX="236.0" layoutY="357.0" styleClass="form-label" text="Date Fin:" />
    <DatePicker fx:id="dateFinPicker" layoutX="236.0" layoutY="377.0" prefHeight="41.0" prefWidth="194.0" promptText="Date Fin" />

    <!-- Label et ComboBox pour le statut -->
    <Label layoutX="236.0" layoutY="227.0" styleClass="form-label" text="Statut:" />
    <ComboBox fx:id="statusComboBox" layoutX="236.0" layoutY="250.0" prefHeight="23.0" prefWidth="194.0" promptText="Statut">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Actif" />
                <String fx:value="Terminé" />
                <String fx:value="Annulé" />
            </FXCollections>
        </items>
    </ComboBox>

    <!-- Boutons -->
    <Button fx:id="modifierButton" layoutX="230.0" layoutY="444.0" onAction="#modifieGiveaway" styleClass="button-validate" text="Valider" />
    <Button fx:id="annulerButton" layoutX="338.0" layoutY="444.0" onAction="#fermerFenetre" styleClass="button-cancel" text="Annuler" />
</AnchorPane>
