<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<AnchorPane prefHeight="499.0" prefWidth="621.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.ModifierGiveawayController">

    <!-- Champ pour le titre du giveaway -->
    <TextField fx:id="titreGiveawayField" layoutX="50" layoutY="50" promptText="Titre du Giveaway" />

    <!-- Champ pour la description -->
    <TextField fx:id="descriptionGiveawayField" layoutX="50" layoutY="100" promptText="Description" />

    <!-- DatePicker pour la date de début -->
    <DatePicker fx:id="dateDebutPicker" layoutX="228.0" layoutY="50.0" promptText="Date Début"/>

    <!-- DatePicker pour la date de fin -->
    <DatePicker fx:id="dateFinPicker" layoutX="228.0" layoutY="100.0" promptText="Date Fin"/>

    <!-- ComboBox pour le statut -->
    <ComboBox fx:id="statusComboBox" layoutX="50.0" layoutY="150.0" promptText="Statut">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Actif"/>
                <String fx:value="Terminé"/>
                <String fx:value="Annulé"/>
            </FXCollections>
        </items>
    </ComboBox>

    <!-- Bouton pour valider les modifications -->
    <Button fx:id="modifierButton" text="Valider" onAction="#modifieGiveaway" layoutX="415.0" layoutY="336.0"/>

    <!-- Bouton pour annuler la modification -->
    <Button fx:id="annulerButton" text="Annuler" onAction="#fermerFenetre" layoutX="315.0" layoutY="336.0"/>

    <!-- Titre de la fenêtre -->
    <Text layoutX="185.0" layoutY="27.0" text="Modifier Giveaway" />

</AnchorPane>

