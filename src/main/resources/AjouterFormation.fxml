<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane id="AnchorPane" prefHeight="720.0" prefWidth="1000.0" styleClass="Box" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.AjouterFormationController">

    <stylesheets>
        <URL value="@style.css" /> <!-- Lien vers le fichier CSS -->
    </stylesheets>

    <children>
        <!-- Titre -->
        <Text layoutX="427.0" layoutY="162.0" styleClass="title" text="Ajouter Formation" />

        <!-- Nom de la formation -->
        <Label layoutX="145.0" layoutY="220.0" text="Nom de la formation:" />
        <TextField fx:id="nomfField" layoutX="145.0" layoutY="245.0" prefHeight="30.0" prefWidth="400.0" promptText="Entrez le nom de la formation" />

        <!-- Niveau -->
        <Label layoutX="145.0" layoutY="420.0" text="Niveau:" />
        <ComboBox fx:id="niveaufComboBox" layoutX="137.0" layoutY="455.0" prefHeight="30.0" prefWidth="400.0" promptText="Entrez le niveau de la formation" />

        <!-- Capacité -->
        <Label layoutX="586.0" layoutY="460.0" text="Capacité:" />
        <TextField fx:id="capacitefField" layoutX="586.0" layoutY="485.0" prefHeight="30.0" prefWidth="400.0" promptText="Entrez la capacité de la formation" />

        <!-- Prix -->
        <Label layoutX="145.0" layoutY="494.0" text="Prix:" />
        <TextField fx:id="prixfField" layoutX="145.0" layoutY="519.0" prefHeight="30.0" prefWidth="400.0" promptText="Entrez le prix de la formation" />

        <!-- Nom du coach -->
        <Label layoutX="586.0" layoutY="217.0" text="Nom du coach:" />
        <TextField fx:id="iduField" layoutX="586.0" layoutY="242.0" prefHeight="30.0" prefWidth="400.0" promptText="Entrez le nom du coach" />

        <!-- Description -->
        <Label layoutX="145.0" layoutY="298.0" text="Description:" />
        <TextArea fx:id="descriptionfField" layoutX="145.0" layoutY="323.0" prefHeight="80.0" prefWidth="400.0" promptText="Entrez une description détaillée de la formation" />

        <!-- Date de début -->
        <Label layoutX="586.0" layoutY="290.0" text="Date de début:" />
        <DatePicker fx:id="dateDebutfField" layoutX="586.0" layoutY="315.0" prefHeight="30.0" prefWidth="400.0" promptText="Choisir la date de début" />

        <!-- Date de fin -->
        <Label layoutX="586.0" layoutY="370.0" text="Date de fin:" />
        <DatePicker fx:id="dateFinfField" layoutX="586.0" layoutY="395.0" prefHeight="30.0" prefWidth="400.0" promptText="Choisir la date de fin" />

        <!-- Bouton Ajouter -->
        <Button fx:id="addBtn" layoutX="218.0" layoutY="582.0" mnemonicParsing="false" onAction="#ajouterFormation" prefHeight="40" prefWidth="237.0" styleClass="GeneralButton" text="Ajouter" />

        <!-- Bouton Afficher -->
        <Button fx:id="afficherBtn" layoutX="549.0" layoutY="582.0" mnemonicParsing="false" onAction="#affichebtn" prefHeight="40" prefWidth="287.0" styleClass="GeneralButton" text="Les Listes Des Formations" />


