<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane id="AnchorPane" prefHeight="720.0" prefWidth="1000.0" styleClass="Box"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.controllers.AjouterFormationController">

    <stylesheets>
        <URL value="@style.css"/> <!-- Lien vers le fichier CSS -->
    </stylesheets>

    <children>
        <!-- Titre -->
        <Text fill="#3949da" layoutX="330.0" layoutY="60.0"
              style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-fill: #333333;"
              text="Gestion des Formations" />

        <!-- Nom de la formation -->
        <Label layoutX="136.0" layoutY="100.0" text="Nom de la formation:" />
        <TextField fx:id="nomfField" layoutX="136.0" layoutY="125.0"
                   prefHeight="30.0" prefWidth="400.0"
                   promptText="Entrez le nom de la formation" />

        <!-- Niveau -->
        <Label layoutX="136.0" layoutY="170.0" text="Niveau:" />
        <TextField fx:id="niveaufField" layoutX="136.0" layoutY="195.0"
                   prefHeight="30.0" prefWidth="400.0"
                   promptText="Entrez le niveau de la formation" />

        <!-- Capacité -->
        <Label layoutX="136.0" layoutY="240.0" text="Capacité:" />
        <TextField fx:id="capacitefField" layoutX="136.0" layoutY="265.0"
                   prefHeight="30.0" prefWidth="400.0"
                   promptText="Entrez la capacité de la formation" />

        <!-- Prix -->
        <Label layoutX="136.0" layoutY="310.0" text="Prix:" />
        <TextField fx:id="prixfField" layoutX="136.0" layoutY="335.0"
                   prefHeight="30.0" prefWidth="400.0"
                   promptText="Entrez le prix de la formation" />

        <!-- Nom du coach -->
        <Label layoutX="136.0" layoutY="380.0" text="Nom du coach:" />
        <TextField fx:id="iduField" layoutX="136.0" layoutY="405.0"
                   prefHeight="30.0" prefWidth="400.0"
                   promptText="Entrez le nom du coach" />

        <!-- Description -->
        <Label layoutX="136.0" layoutY="460.0" text="Description:" />
        <TextArea fx:id="descriptionfField" layoutX="136.0" layoutY="485.0"
                  prefHeight="80.0" prefWidth="400.0"
                  promptText="Entrez une description détaillée de la formation" />

        <!-- Date de début -->
        <Label layoutX="136.0" layoutY="580.0" text="Date de début:" />
        <DatePicker fx:id="dateDebutfField" layoutX="136.0" layoutY="605.0"
                    prefHeight="30.0" prefWidth="400.0"
                    promptText="Choisir la date de début" />

        <!-- Date de fin -->
        <Label layoutX="136.0" layoutY="650.0" text="Date de fin:" />
        <DatePicker fx:id="dateFinfField" layoutX="136.0" layoutY="675.0"
                    prefHeight="30.0" prefWidth="400.0"
                    promptText="Choisir la date de fin" />

        <!-- Bouton Ajouter -->
        <Button fx:id="addBtn" layoutX="600.0" layoutY="675.0"
                mnemonicParsing="false" onAction="#ajouterFormation"
                prefHeight="40" prefWidth="150.0"
                styleClass="GeneralButton" text="Ajouter" />

        <!-- Bouton Afficher -->
        <Button fx:id="afficherBtn" layoutX="780.0" layoutY="675.0"
                mnemonicParsing="false" onAction="#affichebtn"
                prefHeight="40" prefWidth="180.0"
                styleClass="GeneralButton" text="Afficher la liste" />
    </children>
</AnchorPane>
