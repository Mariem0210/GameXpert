<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.shape.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="720.0" prefWidth="1080.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.GestionOffre_de_recrutement">

    <children>
        <!-- Arrière-plan avec effet parallaxe -->
        <StackPane AnchorPane.topAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0">
            <ImageView fitHeight="740.0" fitWidth="1100.0">
                <image>
                    <Image url="@game.jpg" />
                </image>
                <effect>
                    <javafx.scene.effect.ColorAdjust brightness="-0.2" contrast="0.1" hue="-0.05" saturation="0.2" />
                </effect>
            </ImageView>

            <!-- Overlay avec grille de lignes futuriste -->
            <AnchorPane opacity="0.15">
                <!-- Lignes horizontales -->
                <Line startX="0" startY="40" endX="1080" endY="40" stroke="#00e6e6" strokeWidth="1" />
                <Line startX="0" startY="120" endX="1080" endY="120" stroke="#00e6e6" strokeWidth="1" />
                <Line startX="0" startY="300" endX="1080" endY="300" stroke="#00e6e6" strokeWidth="1" />
                <Line startX="0" startY="480" endX="1080" endY="480" stroke="#00e6e6" strokeWidth="1" />
                <Line startX="0" startY="650" endX="1080" endY="650" stroke="#00e6e6" strokeWidth="1" />

                <!-- Lignes verticales -->
                <Line startX="180" startY="0" endX="180" endY="720" stroke="#00e6e6" strokeWidth="1" />
                <Line startX="400" startY="0" endX="400" endY="720" stroke="#00e6e6" strokeWidth="1" />
                <Line startX="780" startY="0" endX="780" endY="720" stroke="#00e6e6" strokeWidth="1" />
                <Line startX="960" startY="0" endX="960" endY="720" stroke="#00e6e6" strokeWidth="1" />

                <!-- Cercles décoratifs -->
                <Circle centerX="180" centerY="120" radius="5" fill="#00e6e6" />
                <Circle centerX="400" centerY="300" radius="5" fill="#00e6e6" />
                <Circle centerX="780" centerY="480" radius="5" fill="#00e6e6" />
                <Circle centerX="960" centerY="650" radius="5" fill="#9d4edd" />
            </AnchorPane>
        </StackPane>


        <!-- Conteneur principal -->
        <VBox spacing="20" AnchorPane.topAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0">
            <HBox styleClass="header" alignment="CENTER_LEFT" spacing="20">
                <Button fx:id="btnHome" styleClass="button, home-button" text="HOME" >
                    <!-- Vous pouvez ajouter une icône ici si nécessaire -->
                </Button>

                <Label text="GESTION DES OFFRES DE RECRUTEMENTS" styleClass="title-text" />

                <HBox.margin>
                    <Insets bottom="10" />
                </HBox.margin>
            </HBox>
            <!-- En-tête avec titre -->


            <!-- Contenu principal -->
            <HBox spacing="20" VBox.vgrow="ALWAYS">

                <!-- Panneau latéral pour le formulaire -->
                <VBox styleClass="side-panel" prefWidth="300" spacing="20">

                    <!-- Section informations offre -->
                    <Label text="INFORMATIONS OFFRE" styleClass="section-title, neon-glow" />

                    <VBox spacing="15">
                        <Label text="POSTE RECHERCHÉ" />
                        <TextField fx:id="tfPosteRecherche" promptText="Entrez le poste recherché" />

                        <Label text="NIVEAU REQUIS" />
                        <TextField fx:id="tfNiveauRequis" promptText="Entrez le niveau requis" />

                        <Label text="SALAIRE PROPOSÉ" />
                        <TextField fx:id="tfSalairePropose" promptText="Entrez le salaire proposé" />

                        <Label text="STATUT" />
                        <TextField fx:id="tfStatus" promptText="Entrez le statut" />

                        <Label text="CONTRAT" />
                        <TextField fx:id="tfContrat" promptText="Entrez le type de contrat" />
                    </VBox>

                    <Separator styleClass="separator" />

                    <!-- Section recherche -->

                </VBox>

                <!-- Panneau principal avec liste des offres -->
                <VBox spacing="10" HBox.hgrow="ALWAYS" styleClass="main-container">
                    <padding>
                        <Insets top="15" right="15" bottom="15" left="15" />
                    </padding>

                    <!-- En-tête du panneau -->
                    <HBox alignment="CENTER_LEFT" spacing="15">
                        <Label text="LISTE DES OFFRES" styleClass="section-title, neon-glow" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label text="ACTIVE" styleClass="status-badge" />
                    </HBox>

                    <!-- ScrollPane pour la liste d'offres -->
                    <ScrollPane VBox.vgrow="ALWAYS" fitToWidth="true" styleClass="scroll-pane">
                        <VBox fx:id="offreContainer" styleClass="offre-container" spacing="15">
                            <!-- Le contenu sera généré dynamiquement -->
                        </VBox>
                    </ScrollPane>

                    <!-- Barre d'actions -->
                    <HBox spacing="15" alignment="CENTER">
                        <Button fx:id="btnAjouter" onAction="#creerOffre" text="AJOUTER" styleClass="button, add-button" />

                        <Button fx:id="btnModifier" onAction="#modifierOffre" text="MODIFIER" styleClass="button, edit-button" />

                        <Button fx:id="btnSupprimer" onAction="#supprimerOffre" text="SUPPRIMER" styleClass="button, delete-button" />

                        <Button fx:id="btnExportPDF" onAction="#genererPDF" text="EXPORTER PDF" styleClass="button, export-button" />
                    </HBox>

                    <HBox spacing="15" alignment="CENTER">
                        <Button fx:id="btnStatistiques" onAction="#afficherStatistiques" text="STATISTIQUES" styleClass="button, stats-button" />

                        <Button fx:id="btnActualitesEsport" onAction="#afficherActualitesEsport" text="ACTUALITÉS ESPORT" styleClass="button, news-button" />
                    </HBox>
                </VBox>
            </HBox>
        </VBox>
    </children>
</AnchorPane>