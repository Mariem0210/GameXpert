<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="720.0" prefWidth="1080.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.controllers.GestionTournoi"
            stylesheets="@styles.css">

    <children>
        <TextField fx:id="tfNomt" layoutX="180.0" layoutY="151.0" promptText="Nom Tournoi" styleClass="text-field"/>
        <TextField fx:id="tfDescriptiont" layoutX="180.0" layoutY="211.0" promptText="Description" styleClass="text-field"/>
        <DatePicker fx:id="dpDateDebutt" layoutX="180.0" layoutY="271.0" promptText="Date Début" styleClass="date-picker"/>
        <DatePicker fx:id="dpDateFint" layoutX="180.0" layoutY="331.0" promptText="Date Fin" styleClass="date-picker"/>
        <TextField fx:id="tfNbrEquipes" layoutX="180.0" layoutY="391.0" promptText="Nombre d'équipes" styleClass="text-field"/>
        <TextField fx:id="tfPrixt" layoutX="180.0" layoutY="451.0" promptText="Prix" styleClass="text-field"/>
        <TextField fx:id="tfStatutt" layoutX="180.0" layoutY="511.0" promptText="Statut" styleClass="text-field"/>

        <Label layoutX="180.0" layoutY="130.0" text="Nom" styleClass="label"/>
        <Label layoutX="180.0" layoutY="190.0" text="Description" styleClass="label"/>
        <Label layoutX="180.0" layoutY="250.0" text="Date Début" styleClass="label"/>
        <Label layoutX="180.0" layoutY="310.0" text="Date Fin" styleClass="label"/>
        <Label layoutX="180.0" layoutY="370.0" text="Nombre d'équipes" styleClass="label"/>
        <Label layoutX="180.0" layoutY="430.0" text="Prix" styleClass="label"/>
        <Label layoutX="180.0" layoutY="490.0" text="Statut" styleClass="label"/>

        <Button id="ajouterTournoi" layoutX="229.0" layoutY="600.0" mnemonicParsing="false"
                onAction="#ajouterTournoi" text="Ajouter" styleClass="button button-ajouter"/>
        <Button id="afficherTournois" layoutX="738.0" layoutY="600.0" mnemonicParsing="false"
                onAction="#afficherTournois" text="Afficher" styleClass="button button-afficher"/>

        <Label fx:id="lbTournois" layoutX="520.0" layoutY="100.0" prefHeight="367.0" prefWidth="488.0"/>

    </children>
</AnchorPane>
