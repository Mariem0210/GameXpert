<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.controllers.ChatBottController"
            prefHeight="400.0" prefWidth="600.0">

    <VBox spacing="10" prefWidth="600.0" prefHeight="400.0">
        <TextArea fx:id="chatArea" editable="false" wrapText="true"
                  prefWidth="600.0" prefHeight="350.0" />
        <HBox spacing="10">
            <TextField fx:id="userInput" prefWidth="500.0" />
            <Button text="Envoyer" onAction="#sendMessage"/>
        </HBox>
    </VBox>

</AnchorPane>
