<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            prefHeight="400.0" prefWidth="600.0"
            fx:controller="tn.esprit.controllers.StripeController"
            stylesheets="@style.css">

    <!-- Image de fond -->
    <ImageView fitHeight="400.0" fitWidth="600.0"
               opacity="0.3">
        <image>
            <Image url="@game.jpg" />
        </image>
    </ImageView>

    <!-- Titre -->
    <Label layoutX="200.0" layoutY="20.0" styleClass="title" text="Paiement avec Stripe" />

    <!-- Conteneur pour les champs de saisie -->
    <VBox layoutX="150.0" layoutY="60.0" spacing="10">
        <!-- Numéro de carte -->
        <Label text="Numéro de carte" />
        <TextField fx:id="tfCardNumber" promptText="4242 4242 4242 4242" />

        <!-- Date d'expiration -->
        <Label text="Date d'expiration (MM/YY)" />
        <HBox spacing="10">
            <TextField fx:id="tfExpMonth" promptText="MM" />
            <TextField fx:id="tfExpYear" promptText="YY" />
        </HBox>

        <!-- CVC -->
        <Label text="CVC" />
        <TextField fx:id="tfCVC" promptText="123" />

        <!-- Montant -->
        <Label text="Montant (EUR)" />
        <TextField fx:id="tfAmount" promptText="100.00" editable="false" />

        <!-- Bouton de paiement -->
        <Button text="Payer" onAction="#processPayment" styleClass="payButton" />
    </VBox>

</AnchorPane>