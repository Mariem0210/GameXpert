<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="499.0" prefWidth="621.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.ModifierFormationController">
    <stylesheets>
        <URL value="@style.css" /> <!-- Lien vers le fichier CSS -->
    </stylesheets>

    <!-- Titre de la fenêtre -->
    <Text layoutX="311.0" layoutY="82.0" styleClass="title" text="Modifier Formation" />

    <!-- Labels et Champs pour les informations -->

    <!-- Nom de la formation -->
    <Label layoutX="101.0" layoutY="111.0" prefHeight="20.0" prefWidth="178.0" style="-fx-text-fill: white;" text="Nom de la Formation:" />
    <TextField fx:id="nomFormationField" layoutX="102.0" layoutY="141.0" prefHeight="28.0" prefWidth="222.0" promptText="Nom de la Formation" />

    <!-- Description -->
    <Label layoutX="99.0" layoutY="180.0" style="-fx-text-fill: white;" text="Description :" />
    <TextArea fx:id="descriptionField" layoutX="99.0" layoutY="207.0" prefHeight="79.0" prefWidth="222.0" promptText="Entrez la description ici..." wrapText="true" />


    <!-- Niveau -->
    <Label layoutX="99.0" layoutY="299.0" style="-fx-text-fill: white;" text="Niveau:" />
    <ComboBox fx:id="niveauComboBox" layoutX="99.0" layoutY="330.0" prefHeight="23.0" prefWidth="222.0" promptText="Niveau" />

    <!-- Capacité -->
    <Label layoutX="102.0" layoutY="365.0" style="-fx-text-fill: white;" text="Capacité:" />
    <TextField fx:id="capaciteField" layoutX="102.0" layoutY="396.0" prefHeight="28.0" prefWidth="222.0" promptText="Capacité" />

    <!-- Prix -->
    <Label layoutX="365.0" layoutY="334.0" style="-fx-text-fill: white;" text="Prix:" />
    <TextField fx:id="prixField" layoutX="362.0" layoutY="361.0" prefHeight="28.0" prefWidth="194.0" promptText="Prix" />

    <!-- ID Utilisateur -->
    <Label layoutX="364.0" layoutY="111.0" style="-fx-text-fill: white;" text="Nom du coach" />
    <TextField fx:id="iduField" layoutX="365.0" layoutY="141.0" prefHeight="28.0" prefWidth="194.0" promptText="ID Utilisateur" />

    <!-- Date de début -->
    <Label layoutX="365.0" layoutY="180.0" style="-fx-text-fill: white;" text="Date Début:" />
    <DatePicker fx:id="dateDebutPicker" layoutX="363.0" layoutY="201.0" prefHeight="41.0" prefWidth="194.0" promptText="Date Début" />

    <!-- Date de fin -->
    <Label layoutX="364.0" layoutY="256.0" style="-fx-text-fill: white;" text="Date Fin:" />
    <DatePicker fx:id="dateFinPicker" layoutX="363.0" layoutY="285.0" promptText="Date Fin" />

    <!-- Boutons d'action -->
    <Button fx:id="annulerButton" layoutX="462.0" layoutY="411.0" onAction="#fermerFenetre" prefHeight="37.0" prefWidth="104.0" styleClass="button-annuler" text="Annuler" />
    <Button fx:id="modifierButton" layoutX="343.0" layoutY="411.0" onAction="#modifieFormation" prefHeight="37.0" prefWidth="104.0" styleClass="button-valider" text="Valider" textFill="#e4e4e4" />

</AnchorPane>