<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="499.0" prefWidth="621.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.ModifierFormationController">
    <stylesheets>
        <URL value="@style.css" /> <!-- Lien vers le fichier CSS -->
    </stylesheets>

    <!-- Titre de la fenêtre -->
    <Text layoutX="152.0" layoutY="56.0" styleClass="title" text="Modifier Formation" />

    <!-- Labels et Champs pour les informations -->

    <!-- Nom de la formation -->
    <Label layoutX="47.0" layoutY="88.0" prefHeight="20.0" prefWidth="178.0" style="-fx-text-fill: white;" text="Nom de la Formation:" />
    <TextField fx:id="nomFormationField" layoutX="48.0" layoutY="118.0" promptText="Nom de la Formation" />

    <!-- Description -->
    <Label layoutX="45.0" layoutY="157.0" style="-fx-text-fill: white;" text="Description :" />
    <TextArea fx:id="descriptionField" layoutX="45.0" layoutY="184.0" prefHeight="79.0" prefWidth="222.0" promptText="Entrez la description ici..." wrapText="true" />


    <!-- Niveau -->
    <Label layoutX="45.0" layoutY="276.0" style="-fx-text-fill: white;" text="Niveau:" />
    <TextField fx:id="niveauField" layoutX="45.0" layoutY="307.0" promptText="Niveau" />

    <!-- Capacité -->
    <Label layoutX="38.0" layoutY="352.0" style="-fx-text-fill: white;" text="Capacité:" />
    <TextField fx:id="capaciteField" layoutX="37.0" layoutY="380.0" promptText="Capacité" />

    <!-- Prix -->
    <Label layoutX="311.0" layoutY="311.0" style="-fx-text-fill: white;" text="Prix:" />
    <TextField fx:id="prixField" layoutX="308.0" layoutY="338.0" prefHeight="28.0" prefWidth="194.0" promptText="Prix" />

    <!-- ID Utilisateur -->
    <Label layoutX="310.0" layoutY="88.0" style="-fx-text-fill: white;" text="Nom du coach" />
    <TextField fx:id="iduField" layoutX="311.0" layoutY="118.0" prefHeight="28.0" prefWidth="185.0" promptText="ID Utilisateur" />

    <!-- Date de début -->
    <Label layoutX="311.0" layoutY="157.0" style="-fx-text-fill: white;" text="Date Début:" />
    <DatePicker fx:id="dateDebutPicker" layoutX="309.0" layoutY="178.0" promptText="Date Début" />

    <!-- Date de fin -->
    <Label layoutX="310.0" layoutY="233.0" style="-fx-text-fill: white;" text="Date Fin:" />
    <DatePicker fx:id="dateFinPicker" layoutX="309.0" layoutY="262.0" promptText="Date Fin" />

    <!-- Boutons d'action -->
    <Button fx:id="annulerButton" layoutX="406.0" layoutY="408.0" onAction="#fermerFenetre" prefHeight="39.0" prefWidth="115.0" styleClass="button-annuler" text="Annuler" />
    <Button fx:id="modifierButton" layoutX="253.0" layoutY="408.0" onAction="#modifieFormation" prefHeight="39.0" prefWidth="115.0" styleClass="button-valider" text="Valider" textFill="#e4e4e4" />

</AnchorPane>
